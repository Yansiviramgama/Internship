@model Yansi_KalmTraining.Model.Viewmodel.UserLoginModel
@{
    Layout = "~/Views/Shared/UserPanelLayout.cshtml";
}

<main class="mdl-layout__content">
    <div class="mdl-card mdl-card__login mdl-shadow--2dp">
        <div class="mdl-card__supporting-text color--dark-gray">
            <div class="mdl-grid">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
                        <span class="mdl-card__title-text text-color--smooth-gray">DARKBOARD</span>
                    </div>
                    <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
                        <span class="login-name text-color--white">Sign in</span>
                        <span class="login-secondary-text text-color--smoke">Enter fields to sign in to DARKBOARD</span>
                    </div>
                    
                    if (TempData["Login"] != null)
                    {
                        <p class="text-danger ms-3">@TempData["Login"] </p>
                    }
                    <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                            <label class="mdl-textfield__label" for="e-mail">Email</label>
                            @Html.TextBoxFor(x => x.User_Email, new { @class = "mdl-textfield__input", id = "e-mail" })
                            <div> @Html.ValidationMessageFor(x => x.User_Email, "", new { @class = "text-danger" })</div>
                        </div>                       
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                            <label class="mdl-textfield__label" for="password">Password</label>
                            @Html.PasswordFor(x => x.User_Password, new { @class = "mdl-textfield__input", id = "password" })
                            <div> @Html.ValidationMessageFor(X => X.User_Password, "", new { @class = "text-danger" })</div>
                        </div>
                        <a href="/Login/ForgotPassword" class="login-link">Forgot password?</a>
                    </div>
                    <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone submit-cell">
                        <a href="/Login/SignUp" class="login-link">Don't have account?</a>
                        <div class="mdl-layout-spacer"></div>
                        <button type="submit" class="mdl-button mdl-js-button mdl-button--raised color--light-blue">
                            SIGN IN
                        </button>

                    </div>
                }
            </div>
        </div>
    </div>

</main>
