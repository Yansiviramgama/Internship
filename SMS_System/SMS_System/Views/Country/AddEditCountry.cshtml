@model SMS_System.Model.ViewModel.CountryModel
@{
    ViewData["Title"] = "AddEditCountry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <!-- Card Header - Accordion -->
    <a href="#collapseCardExample1" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample1">
        <h3 class="m-0 font-weight-bold text-primary text-center">Country</h3>
    </a>
    <!-- Card Content - Collapse -->
    <div class="collapse show" id="collapseCardExample1">
        <div class="card-body">
            @using (Html.BeginForm("AddEditCountry", "Country", FormMethod.Post))
            {
                <div class="row">
                    <div class="col">
                        @Html.HiddenFor(x => x.CountryId)
                        @Html.TextBoxFor(x => x.CountryName , new{@class="form-control",@placeholder="Enter Country Name"})
                        @Html.ValidationMessageFor(x => x.CountryName, "",new {@class="text-danger"})
                    </div>
                    <div class="col">
                        <div class="text-center"><button type="submit" class="btn btn-primary">Save</button></div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
