@model SMS_System.Model.ViewModel.StateModel

@{
    ViewData["Title"] = "AddEditState";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <!-- Card Header - Accordion -->
    <a href="#collapseCardExample1" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample1">
        <h3 class="m-0 font-weight-bold text-primary text-center">State</h3>
    </a>
    <!-- Card Content - Collapse -->
    <div class="collapse show" id="collapseCardExample1">
        <div class="card-body">
            @using (Html.BeginForm("AddEditState", "State", FormMethod.Post))
            {
                <div class="row">
                    <div class="col">
                        <select asp-for="CountryId" class="form-control" asp-items="@ViewBag.CountryList">
                            <option selected>--Select Country--</option>
                        </select>                      
                    </div>
                    <div class="col">
                        @Html.HiddenFor(x => x.StateId)
                        @Html.TextBoxFor(x => x.StateName , new{@class="form-control",@placeholder="Enter State Name"})
                        @Html.ValidationMessageFor(x => x.StateName, "",new {@class="text-danger"})
                    </div>
                </div>
                <div class="row">
                    <div class="text-center"><button type="submit" class="btn btn-primary">Save</button></div>
                    </div>
            }
        </div>
    </div>
</div>

