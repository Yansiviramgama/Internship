@model List<SchoolManagement_331.Models.Context.City>
@{
    ViewBag.Title = "ShowCity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .container_b {
        max-width: 90%;
        width: 100%;
        margin: 0 auto;
    }

    .table_bg {
        box-shadow: rgba(0, 0, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;
        background-color: black;
        /*box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;*/
        /*box-shadow: 0 0 15px #888888;*/
        /*background-color*/
    }

    .main {
        max-width: 90%;
        width: 100%;
        margin: 0 auto;
    }

    .dataTables_wrapper {
        padding: 30px;
    }
</style>
<h2 class="colortext text-center">Show City</h2>

<div class="container_b">
    <div class="table_bg">
        <div class="main colortext">
            <table class="table DataTable colortext">
                <thead>
                    <tr class="colortext">
                        <th>
                            City ID
                        </th>
                        <th>
                            City Name
                        </th>
                        <th>
                            State Name
                        </th>
                        <th>
                            Country Name
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                    <tr class="colortext">
                        <td>
                            @i.CityID
                        </td>
                        <td>
                            @i.CityName
                        </td>
                        <td>
                            @i.State.StateName
                        </td>
                        <td>
                            @i.Country.CountryName
                        </td>
                        <td>
                            <a href="/City/AddCity/@i.CityID" class="btn btn-info"> Edit </a>

                            <a href="/City/DeleteCity/@i.CityID" class="btn btn-danger"> Delete </a>

                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>
</div>


