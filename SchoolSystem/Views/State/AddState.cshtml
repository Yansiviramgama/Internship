@model SchoolSystem.Models.StateModel
@{
    ViewBag.Title = "AddState";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="d-flex justify-content-center">
        <h1 class="text-center colortext">Add New State</h1>
    </div>
    <div>
        @using (Html.BeginForm("AddState", "State", FormMethod.Post))
        {
            <div class="d-flex justify-content-between">
                @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
                @Html.DropDownListFor(x => x.CountryID, ViewBag.CountryList as SelectList, " -- Select Country -- ", new { @class = "select-box mx-2" })
                @Html.TextBoxFor(x => x.StateName, new { @class = "form-control" })
                <button type="submit" class="btn btn-primary px-5 mx-5">Save</button>
            </div>
        }
    </div>
</div>
